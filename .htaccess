# Habilitar el módulo de expiración de caché
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Caché para imágenes (1 año)
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"

  # Caché para CSS (1 mes)
  ExpiresByType text/css "access plus 1 month"

  # Caché para JavaScript (1 mes)
  ExpiresByType application/javascript "access plus 1 month"

  # Caché para fuentes web (1 año)
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# Habilitar compresión GZIP para mejorar la velocidad de transferencia
<IfModule mod_deflate.c>
  # Comprimir archivos CSS
  AddOutputFilterByType DEFLATE text/css
  
  # Comprimir archivos JavaScript
  AddOutputFilterByType DEFLATE application/javascript
  
  # Comprimir archivos de fuentes web
  AddOutputFilterByType DEFLATE font/ttf
  AddOutputFilterByType DEFLATE application/font-woff2
</IfModule>

# Desactivar ETag para evitar el conflicto entre versiones
<IfModule mod_headers.c>
  Header unset ETag
</IfModule>
FileETag None

# Cache-Control para garantizar el almacenamiento prolongado en la caché del navegador
<IfModule mod_headers.c>
  Header set Cache-Control "max-age=31536000, public"
</IfModule>
